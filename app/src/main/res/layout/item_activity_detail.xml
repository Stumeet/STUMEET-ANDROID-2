<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_activity_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_gray_50_radius_16"
        android:elevation="5dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/tv_activity_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Stumeet.Caption1"
            android:textColor="@color/gray_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="스터디명" />

        <TextView
            android:id="@+id/tv_activity_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Stumeet.Caption1"
            android:textColor="@color/gray_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_activity_study"
            tools:text="@string/enum_study_activity_type_assignment" />

        <TextView
            android:id="@+id/tv_activity_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.Stumeet.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_study"
            tools:text="제목" />

        <TextView
            android:id="@+id/tv_activity_detail_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/gray_400"
            android:textAppearance="@style/TextAppearance.Stumeet.Body4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_detail_title"
            tools:text="@string/component_snackbar_test"
            android:maxLines="1"
            android:ellipsize="end"/>


        <TextView
            android:id="@+id/tv_activity_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:textAppearance="@style/TextAppearance.Stumeet.Caption1"
            android:textColor="@color/gray_300"
            app:drawableStartCompat="@drawable/ic_activity_clock"
            app:drawableTint="@color/gray_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_detail_content"
            tools:text="2024.12.27 00:00" />

        <TextView
            android:id="@+id/tv_activity_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:textAppearance="@style/TextAppearance.Stumeet.Caption1"
            android:textColor="@color/gray_300"
            app:drawableStartCompat="@drawable/ic_activity_location"
            app:drawableTint="@color/gray_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_detail_time"
            tools:text="서울여자대학교" />

        <ImageView
            android:id="@+id/iv_activity_detail_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/shape_primary_700_oval"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_detail_location" />

        <TextView
            android:id="@+id/tv_activity_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="@style/TextAppearance.Stumeet.Body5"
            app:layout_constraintBottom_toBottomOf="@id/iv_activity_detail_profile"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toEndOf="@id/iv_activity_detail_profile"
            app:layout_constraintTop_toTopOf="@id/iv_activity_detail_profile"
            tools:text="홍길동" />

        <TextView
            android:id="@+id/tv_activity_detail_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="@style/TextAppearance.Stumeet.Body5"
            android:textColor="@color/gray_300"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toEndOf="@id/tv_activity_detail_name"
            app:layout_constraintTop_toTopOf="@id/tv_activity_detail_name"
            tools:text="2주 전" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>