<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_activity_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:elevation="5dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:background="@drawable/shape_gray_50_radius_16">

        <TextView
            android:id="@+id/tv_activity_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Stumeet.Caption1"
            android:textColor="@color/gray_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="스터디명" />

        <TextView
            android:id="@+id/tv_activity_brief_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Stumeet.Caption1"
            android:textColor="@color/gray_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_activity_study"
            tools:text="@string/enum_study_activity_type_assignment" />

        <TextView
            android:id="@+id/tv_activity_brief_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.Stumeet.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_study"
            tools:text="제목" />

        <TextView
            android:id="@+id/tv_activity_brief_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawablePadding="4dp"
            android:textAppearance="@style/TextAppearance.Stumeet.Caption1"
            android:textColor="@color/gray_300"
            app:drawableStartCompat="@drawable/ic_activity_clock"
            app:drawableTint="@color/gray_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_brief_title"
            tools:text="2024.12.27 00:00" />

        <TextView
            android:id="@+id/tv_activity_brief_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:textAppearance="@style/TextAppearance.Stumeet.Caption1"
            android:textColor="@color/gray_300"
            app:drawableStartCompat="@drawable/ic_activity_location"
            app:drawableTint="@color/gray_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_brief_time"
            tools:text="서울여자대학교" />

        <TextView
            android:id="@+id/tv_activity_brief_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray_200_radius_16"
            android:backgroundTint="@color/selector_gray_75_enable_primary_50"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:enabled="true"
            android:textAppearance="@style/TextAppearance.Stumeet.Body5"
            android:textColor="@color/selector_gray_300_enable_primary_700"
            app:layout_constraintBottom_toBottomOf="@id/tv_activity_brief_location"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="9시간 30분 남음" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>