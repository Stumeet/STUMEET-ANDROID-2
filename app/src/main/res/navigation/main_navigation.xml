<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/fragment_login"
        android:name="com.aramtory.stumeet.presentation.auth.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_profile_image"
            app:destination="@id/fragment_profile_image"
            app:popUpTo="@id/fragment_login"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.aramtory.stumeet.presentation.home.HomeFragment"
        android:label="HomeStumeetFragment"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_study"
        android:name="com.aramtory.stumeet.presentation.study.StudyFragment"
        android:label="StudyStumeetFragment"
        tools:layout="@layout/fragment_study" />
    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.aramtory.stumeet.presentation.calendar.CalendarFragment"
        android:label="CalendarStumeetFragment"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/navigation_my"
        android:name="com.aramtory.stumeet.presentation.my.MyFragment"
        android:label="MyStumeetFragment"
        tools:layout="@layout/fragment_my" />
    <fragment
        android:id="@+id/fragment_profile_image"
        android:name="com.aramtory.stumeet.presentation.auth.signup.ProfileImageFragment">
        <action
            android:id="@+id/action_profile_image_to_nickname"
            app:destination="@id/fragment_nickname" />
    </fragment>
    <fragment
        android:id="@+id/fragment_nickname"
        android:name="com.aramtory.stumeet.presentation.auth.signup.NicknameFragment"
        android:label="NicknameFragment"
        tools:layout="@layout/fragment_nickname">
        <action
            android:id="@+id/action_nickname_to_region_selection"
            app:destination="@id/fragment_region_selection" />
    </fragment>
    <fragment
        android:id="@+id/fragment_region_selection"
        android:name="com.aramtory.stumeet.presentation.auth.signup.RegionSelectionFragment"
        android:label="RegionSelectionFragment"
        tools:layout="@layout/fragment_region_selection">
        <action
            android:id="@+id/action_region_selection_to_study_field"
            app:destination="@id/fragment_study_field" />
    </fragment>
    <fragment
        android:id="@+id/fragment_study_field"
        android:name="com.aramtory.stumeet.presentation.auth.signup.StudyFieldFragment"
        android:label="StudyFieldFragment"
        tools:layout="@layout/fragment_study_field">
        <action
            android:id="@+id/action_study_field_to_signUp_success"
            app:destination="@id/fragment_signUp_success" />
    </fragment>
    <fragment
        android:id="@+id/fragment_signUp_success"
        android:name="com.aramtory.stumeet.presentation.auth.signup.SignUpSuccessFragment"
        android:label="SignUpSuccessFragment"
        tools:layout="@layout/fragment_sign_up_success">
        <action
            android:id="@+id/action_signUp_success_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/fragment_signUp_success"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>