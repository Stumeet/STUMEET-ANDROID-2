<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Stumeet" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--Heading-->
    <style name="TextAppearance.Stumeet.Heading1">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">28dp</item>
    </style>

    <style name="TextAppearance.Stumeet.Heading2">
        <item name="fontFamily">@font/font_pretendard_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">28dp</item>
    </style>

    <style name="TextAppearance.Stumeet.Heading3">
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">28dp</item>
    </style>

    <style name="TextAppearance.Stumeet.Heading4">
        <item name="fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">28dp</item>
    </style>

    <!--Title-->
    <style name="TextAppearance.Stumeet.Title1">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">23dp</item>
    </style>

    <style name="TextAppearance.Stumeet.Title2">
        <item name="fontFamily">@font/font_pretendard_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">23dp</item>
    </style>

    <style name="TextAppearance.Stumeet.Title3">
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">23dp</item>
    </style>

    <!--SubTitle-->
    <style name="TextAppearance.Stumeet.SubTitle1">
        <item name="fontFamily">@font/font_pretendard_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">21dp</item>
    </style>

    <style name="TextAppearance.Stumeet.SubTitle2">
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">21dp</item>
    </style>

    <style name="TextAppearance.Stumeet.SubTitle3">
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearance.Stumeet.SubTitle4">
        <item name="fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <!--Body-->
    <style name="TextAppearance.Stumeet.Body1">
        <item name="fontFamily">@font/font_pretendard_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">19dp</item>
    </style>

    <style name="TextAppearance.Stumeet.Body2">
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">19dp</item>
    </style>

    <style name="TextAppearance.Stumeet.Body3">
        <item name="fontFamily">@font/font_pretendard_medium</item>
