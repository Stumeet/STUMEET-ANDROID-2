    <style name="TextAppearance.Stumeet.Body4">
        <item name="fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">17dp</item>
    </style>

    <!--Caption-->
    <style name="TextAppearance.Stumeet.Caption1">
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">16dp</item>
    </style>

    <style name="TextAppearance.Stumeet.Caption2">
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textSize">12sp</item>
