<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Stumeet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_700</item>
        <item name="colorOnPrimary">@color/gray_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_50</item>
        <item name="colorSecondaryVariant">@color/primary_100</item>
        <item name="colorOnSecondary">@color/gray_75</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Stumeet" parent="Base.Theme.Stumeet" />

    <style name="Theme.Toolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_50</item>
        <item name="elevation">0dp</item>
        <item name="android:windowBackground">@color/gray_50</item>
    </style>

    <style name="StumeetDialogTheme" parent="Theme.AppCompat.Dialog">
        <!-- 팝업 창의 배경 설정  -->
        <item name="android:windowBackground">@drawable/shape_gray_50_radius_24</item>
        <!-- 팝업이 화면 위에 떠 있는 모양으로 설정 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 팝업 너비를 화면 너비의 80%로 설정 -->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <!-- 팝업 제목 영역 숨김 -->
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>